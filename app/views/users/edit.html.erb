<div class="container">
  <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
      <label>Name</label> 
      <div class="form-group">
        <%= f.text_field :name %>
      </div>  
      <label>Image</label>
      <div class="form-group">
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>  
      <label>Introduction</label>
      <div class="form-group">
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User', class:"btn btn-secondary" %>
      </div>
      <% end %>

      </div>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </div>
    </div>
  </div>
</div>